<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="java.time.format.DateTimeFormatter" />
        <import type="com.example.tripplannr.application_layer.util.ModeOfTransportIconDictionary" />
        <variable
            name="route"
            type="com.example.tripplannr.domain_layer.Route" />
        <variable
            name="iconType"
            type="com.example.tripplannr.domain_layer.ModeOfTransport" />
        <variable
            name="fragmentActivity"
            type="androidx.fragment.app.FragmentActivity" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/trip_result_border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/startTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text='@{route.times.departure.format(DateTimeFormatter.ofPattern("HH:mm"))}'
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/originTextView"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text='@{route.times.arrival.format(DateTimeFormatter.ofPattern("HH:mm"))}'
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/startTimeTextView"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/originTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text='@{route.origin.name + " - Track " + route.origin.track}'
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/destinationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text='@{route.destination.name + " - Track " + route.destination.track}'
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeTextView"
            app:layout_constraintVertical_bias="1.0"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="67dp"
            android:layout_height="73dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/destinationTextView"
            app:layout_constraintEnd_toStartOf="@+id/startTimeTextView"
            app:layout_constraintTop_toBottomOf="@+id/originTextView"
            android:src="@{fragmentActivity.getDrawable(ModeOfTransportIconDictionary.getTransportIcon(iconType))}"
            android:tint="@color/white"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="45dp"
            android:layout_height="161dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/trip_line"
            android:tint="@color/white"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>