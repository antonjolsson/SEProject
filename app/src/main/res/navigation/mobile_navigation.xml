<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_trip_fragment"
        android:name="com.example.tripplannr.trip.TripFragment"
        android:label="@string/trip">
        <action
            android:id="@+id/action_navigation_trip_fragment_to_navigation_trip_results"
            app:destination="@id/navigation_trip_results" />
    </fragment>

    <fragment
        android:id="@+id/navigation_trip_results"
        android:name="com.example.tripplannr.trip.TripResultFragment"
        android:label="@string/trip_result"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_navigation_trip_results_to_navigation_trip_fragment"
            app:destination="@id/navigation_trip_fragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.tripplannr.trip.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <!--<fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.tripplannr.trip.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />-->

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.tripplannr.trip.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>